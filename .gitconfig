[user]
    email = mxyng@pm.me
    name = Michael Yang

[core]
    editor = nvim

[alias]
    st = status -sb
    ci = commit
    co = checkout
    br = branch --format '%(HEAD) %(if)%(HEAD)%(then)%(color:bold cyan)%(end)%(refname:strip=2)%(color:reset) %(color:bold green)%(upstream:strip=2)%(color:reset) %(color:yellow)%(upstream:track)%(color:reset)'
    df = diff
    dc = diff --cached
    cp = cherry-pick
    who = shortlog -s --
    undo = reset --hard
    lg = log --oneline -p
    ll = log --oneline --numstat
    lsd = log --oneline --graph
    rbi = rebase -i
    fu = commit --fixup
    ap = add -p

[color]
    ui = true

[pull]
    rebase = true

[merge]
    conflictstyle = diff3

[pager]
    status = true

[fetch]
    prune = true

[init]
    defaultBranch = main

[url "git@github.com:"]
    insteadOf = https://github.com/

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true

[rebase]
    autosquash = true
    autostash = true
