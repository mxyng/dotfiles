[core]
    editor = nvim
    excludesfile = ~/.gitignore

[alias]
    st = status -sb
    ci = commit
    co = checkout
    br = branch
    df = diff
    dc = diff --cached
    cp = cherry-pick
    who = shortlog -s --
    undo = reset --hard
    lg = log --oneline -p
    ll = log --oneline --numstat
    lsd = log --oneline --graph
    rbi = rebase -i
    touch = commit --amend --no-edit
    ap = add -p
    tmp = commit -pm tmp

[color]
    ui = true

[pull]
    rebase = true

[merge]
    conflictstyle = diff3

[pager]
    branch = false

[fetch]
    prune = true

[includeIf "gitdir:~/git/mxyng/"]
    path = ~/git/mxyng/.gitconfig

[includeIf "gitdir:~/git/infrahq/"]
    path = ~/git/infrahq/.gitconfig
